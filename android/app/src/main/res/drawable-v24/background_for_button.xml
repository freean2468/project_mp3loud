<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <gradient
                android:startColor="#000000"
                android:endColor="#000000"/>
            <corners
                android:radius="10dp"/>

            <stroke
                android:width="0.1dp"
                android:color="#52EDEDED" />
        </shape>
    </item>
    <item
        android:left="20dp"
        android:right="20dp"
        android:top="20dp"
        android:bottom="20dp">
        <shape
            android:shape="rectangle">
            <corners
                android:radius="20dp"
                />
        </shape>
    </item>
</layer-list>